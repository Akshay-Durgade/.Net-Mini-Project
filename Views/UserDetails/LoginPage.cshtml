@model MP1.Models.UserDetails

@{
    ViewData["Title"] = "LoginPage";
}
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<h1 class="text-center">LoginPage</h1>


    @{
        <h4 class="text-center">Welcome to Login Page</h4>
    }
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 align-self-center">
        <form asp-action="LoginPage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                
                <span class="text-danger">@ViewBag.a</span>
            </div>
            
            <div class="form-group" id="button">
                <input type="submit" value="Login" class="btn btn-success mt-5 me-3" />
            </div>
        </form>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-4" id="button1">    <a asp-action="Create"><button class="btn btn-info mt-2 text-white">Not a User?Register Here</button></a></div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
